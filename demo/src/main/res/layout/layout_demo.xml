<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <TextView
        style="@style/AppTheme.Text.Center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/title_background"
        android:padding="20dp"
        android:text="@string/app_name"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/wave_background">

            <SurfaceView
                android:id="@+id/sv_wave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_change_style"
            style="@style/AppTheme.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_wave_background"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_style_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="CHANGE STYLE"
            android:textSize="14dp" />

        <TextView
            style="@style/AppTheme.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Media Player Style"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_media_player_start_or_stop"
                style="@style/AppTheme.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_wave_background"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="START"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_media_player_pause_or_resume"
                style="@style/AppTheme.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_wave_background"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_pause_black_24dp"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="PAUSE"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            style="@style/AppTheme.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Audio Record Style"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_audio_record_start_or_stop"
                style="@style/AppTheme.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_wave_background"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="START"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/AppTheme.Text.Right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="BY BOGERCHAN"
        android:textSize="12dp" />

</LinearLayout>
